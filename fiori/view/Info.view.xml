<core:View
    controllerName="mvk.view.Info"
    xmlns="sap.m"
    xmlns:core="sap.ui.core" >
    <Page
        title="{i18n>WELCOME_TITLE}"
        enableScrolling="true"
        showNavButton="{device>/isPhone}"
        navButtonPress="doNavBack" >  
        <headerContent>
            <Button
                icon="sap-icon://home"
                tooltip="Back to Launchpad"
                visible="{device>/launchpadMode}"
                press="doNavBackLaunchpad"
                >
            </Button>
        </headerContent>              
        <footer>
            <Bar>
				<contentRight> 
 					<Link 
                    text="Infos"
                    href="https://markusvankempen.wordpress.com/" 
 					/> 
 					                <Link
                    text="Email"
                    href="mailto:mvk@ca.ibm.com" >
                </Link>  

                <Link
                    text="@Markusvankempen"
                    href="https://twitter.com/intent/tweet?screen_name=markusvankempen">
                </Link>  
                          
 					
 					
 				</contentRight> 
               
            </Bar>
        </footer>
        <content>
            <VBox
                alignItems="Center"
                justifyContent="Center" >
                <Text
                    text="{i18n>WELCOME_INFO}"
                    class="welcomeText" >
                </Text>
                <Link
                    text="Infos"
                    href="https://markusvankempen.wordpress.com/" >
                </Link>  
                           
                <Image
                    src="img/114_iPhone-Retina_Web_Clip.png" />          
                    
                <Link
                    text="Email"
                    href="mailto:mvk@ca.ibm.com" >
                </Link>  

                <Link
                    text="@Markusvankempen"
                    href="https://twitter.com/intent/tweet?screen_name=markusvankempen">
                </Link>  
                          
            </VBox>
        </content>
    </Page>
</core:View>